<div class="signin">
  <%= form_for(@user) do |f| %>
    <%= render 'shared/user_error_messages' %>

    <div class="control-group">
      <%= f.email_field :email, placeholder: "电子邮箱" %>
      <span>&nbsp;&nbsp;*请输入正确的邮箱地址*</span>
    </div>
    <div class="control-group">
      <%= f.text_field :name, placeholder: "用户名" %>
      <span>&nbsp;&nbsp;*用户名可以是任意字符*</span>
    </div>
    <div class="control-group">
      <%= f.password_field :password, placeholder: "密码" %>
      <span>&nbsp;&nbsp;*密码由至少6位字符组成*</span>
    </div>
    <div class="control-group">
      <%= f.password_field :password_confirmation, placeholder: "再次输入密码" %>
      <span>&nbsp;&nbsp;*请再次输入密码*</span>
      </div>
    <%= f.submit "注册", class: "btn btn-primary" %>
  <% end %>
</div>
