<div class="signin">
  <%= form_for(@user) do |f| %>
    <%= render 'shared/user_error_messages' %>

    <div class="control-group">
      <%= f.text_field :name, placeholder: "用户名" %>
      <span>&nbsp;&nbsp;*用户名可以是任意字符,不修改请留空*</span>
    </div>
    <div class="control-group">
      <%= f.password_field :password, placeholder: "密码" %>
      <span>&nbsp;&nbsp;*至少6位字符,不修改请留空*</span>
    </div>
    <div class="control-group">
      <%= f.password_field :password_confirmation, placeholder: "再次输入密码" %>
      <span>&nbsp;&nbsp;*请再次输入密码,不修改请留空*</span>
      </div>
    <%= f.submit "确认修改", class: "btn btn-primary" %>
  <% end %>
</div>
