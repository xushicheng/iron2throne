<div class="signin">
  <%= form_for(:session, url: login_path) do |f| %>

    <div class="control-group"><%= f.email_field :email, placeholder: "电子邮箱" %></div>
    <div class="control-group"><%= f.password_field :password, placeholder: "密码" %></div>
    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span>记住我</span>
    <% end %>

    <div><%= f.submit "登陆", class: "btn btn-primary",style: "width: 76px" %></div>
  <% end %>
</div>
